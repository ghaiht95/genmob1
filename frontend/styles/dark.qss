/* Dark Theme Style Sheet */

/* Main Application Style */
QMainWindow, QDialog {
    background-color: #1e1e1e;
    color: #e0e0e0;
}

/* Buttons */
QPushButton {
    background-color: #0c7cd5;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: bold;
    min-height: 30px;
}

QPushButton:hover {
    background-color: #0d8aee;
}

QPushButton:pressed {
    background-color: #0a69b7;
}

QPushButton:disabled {
    background-color: #474747;
    color: #7a7a7a;
}

/* Text Inputs */
QLineEdit, QTextEdit, QPlainTextEdit {
    border: 1px solid #474747;
    border-radius: 4px;
    padding: 6px;
    background-color: #2d2d2d;
    color: #e0e0e0;
    selection-background-color: #0c7cd5;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #0c7cd5;
}

/* Text Browser/Display */
QTextBrowser {
    background-color: #2d2d2d;
    border: 1px solid #474747;
    border-radius: 4px;
    padding: 6px;
    color: #e0e0e0;
}

/* List Widget */
QListWidget {
    background-color: #2d2d2d;
    border: 1px solid #474747;
    border-radius: 4px;
    alternate-background-color: #333333;
    color: #e0e0e0;
}

QListWidget::item {
    padding: 5px;
}

QListWidget::item:selected {
    background-color: #0c7cd5;
    color: white;
}

QListWidget::item:hover {
    background-color: #383838;
}

/* Labels */
QLabel {
    color: #e0e0e0;
}

QLabel#lbl_welcome, QLabel[title="true"] {
    font-size: 18px;
    font-weight: bold;
    color: #0c7cd5;
    margin-bottom: 10px;
}

/* Checkbox */
QCheckBox {
    spacing: 8px;
    color: #e0e0e0;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    border: 1px solid #474747;
    background-color: #2d2d2d;
    border-radius: 2px;
}

QCheckBox::indicator:checked {
    border: 1px solid #0c7cd5;
    background-color: #0c7cd5;
    border-radius: 2px;
}

/* Group Box */
QGroupBox {
    border: 1px solid #474747;
    border-radius: 4px;
    margin-top: 16px;
    padding-top: 16px;
    color: #e0e0e0;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 5px;
    color: #e0e0e0;
    font-weight: bold;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #474747;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #333333;
    border: 1px solid #474747;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 12px;
    color: #e0e0e0;
}

QTabBar::tab:selected {
    background-color: #2d2d2d;
    margin-bottom: -1px;
}

QTabBar::tab:hover:!selected {
    background-color: #3a3a3a;
}

/* Combo Box */
QComboBox {
    border: 1px solid #474747;
    border-radius: 4px;
    padding: 5px 10px;
    background-color: #2d2d2d;
    min-height: 30px;
    color: #e0e0e0;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: center right;
    width: 15px;
    border-left: none;
}

QComboBox QAbstractItemView {
    border: 1px solid #474747;
    background-color: #2d2d2d;
    selection-background-color: #0c7cd5;
    selection-color: white;
    color: #e0e0e0;
}

/* Radio Button */
QRadioButton {
    spacing: 8px;
    color: #e0e0e0;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
}

QRadioButton::indicator:unchecked {
    border: 1px solid #474747;
    background-color: #2d2d2d;
    border-radius: 8px;
}

QRadioButton::indicator:checked {
    border: 1px solid #0c7cd5;
    background-color: #2d2d2d;
    border-radius: 8px;
}

QRadioButton::indicator:checked:disabled {
    border: 1px solid #474747;
    background-color: #333333;
}

/* Scroll Area */
QScrollArea {
    border: 1px solid #474747;
    background-color: #2d2d2d;
}

/* Scroll Bar */
QScrollBar:vertical {
    border: none;
    background-color: #2d2d2d;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #474747;
    min-height: 30px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background-color: #2d2d2d;
    height: 12px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #474747;
    min-width: 30px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Message Box */
QMessageBox {
    background-color: #1e1e1e;
    color: #e0e0e0;
}

QMessageBox QLabel {
    color: #e0e0e0;
}

/* Room Item Widget */
QWidget#room_item_widget {
    padding: 8px;
    border: 1px solid #474747;
    border-radius: 8px;
    background-color: #2d2d2d;
    margin: 4px;
}

QLabel#room_item_name {
    font-weight: bold;
    font-size: 16px;
    color: #e0e0e0;
}

QLabel#room_item_players, QLabel#room_item_type {
    font-size: 13px;
    color: #b0b0b0;
}

QLabel#room_item_description {
    color: #a0a0a0;
    font-size: 12px;
}

QPushButton#room_item_join_button {
    background-color: #0c7cd5;
    color: white;
    border-radius: 6px;
    padding: 6px 16px;
}

QPushButton#room_item_join_button:hover {
    background-color: #0d8aee;
}

/* Room Card Widget */
QWidget#room_card_widget {
    background-color: #2d2d2d;
    border: 1px solid #474747;
    border-radius: 10px;
    padding: 12px;
    margin: 4px;
}

QLabel#room_card_name {
    font-weight: bold;
    font-size: 14px;
    color: #e0e0e0;
}

QLabel#room_card_players, QLabel#room_card_type {
    font-size: 12px;
    color: #b0b0b0;
}

QPushButton#room_card_join_button {
    background-color: #0c7cd5;
    color: white;
    border-radius: 5px;
    padding: 4px;
}

QPushButton#room_card_join_button:hover {
    background-color: #0d8aee;
} 